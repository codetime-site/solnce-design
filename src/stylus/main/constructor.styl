/* Interior Constructor Styles */
.interior-constructor
    margin-top: 60px;
    padding: 40px 0;
    background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);


.constructor-header
    text-align: center;
    margin-bottom: 30px;


.constructor-header h1
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 10px;


.constructor-header p
    font-size: 1.2rem;
    color: #666;


.constructor-controls
    display: flex;
    justify-content: center;
    margin-bottom: 30px;


.room-selector label
    margin-right: 10px;
    font-weight: 600;


.room-selector select
    padding: 10px 15px;
    border-radius: 5px;
    border: 1px solid #ddd;
    font-size: 16px;


.constructor-main
    display: flex;
    gap: 30px;


.elements-panel
    flex: 1;
    max-width: 300px;


.element-category
    margin-bottom: 20px;


.element-category h3
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: #333;


.elements-list
    display: flex;
    flex-wrap: wrap;
    gap: 10px;


.element-item
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    cursor: grab;
    transition: transform 0.2s;


.element-item:hover
    transform: translateY(-2px);


.element-item img
    width: 50px;
    height: 50px;
    margin-bottom: 5px;


.element-item span
    font-size: 12px;
    text-align: center;


.view-area
    flex: 2;


.view-container
    background: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    min-height: 400px;


.room-canvas
    width: 100%;
    height: 350px;
    background: #f0f0f0;
    border: 2px dashed #ccc;
    position: relative;
    overflow: hidden;



.element-controls
    margin-top: 20px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 8px;


.control-group
    margin-bottom: 10px;


.control-group label
    display: block;
    margin-bottom: 5px;
    font-weight: 600;


.constructor-actions
    text-align: center;
    margin-top: 30px;


#reset-design
    padding: 15px 30px;
    background: #dc3545;
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 18px;
    cursor: pointer;
    transition: transform 0.3s;
    margin-right: 15px;


#reset-design:hover
    transform: translateY(-2px);
    background: #c82333;


#save-design
    padding: 15px 30px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 18px;
    cursor: pointer;
    transition: transform 0.3s;


#save-design:hover
    transform: translateY(-2px);


.constructor-cta
    text-align: center;
    margin-top: 20px;
    font-size: 1.1rem;
    color: #666;


+below(t)
    .constructor-main
        flex-direction: column;
    

    .elements-panel
        max-width: none;
    
    .view-tabs
        justify-content: center;
    
