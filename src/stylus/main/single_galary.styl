#splide .splide__pagination 
    display: none;

.img_template 
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 35px;
    justify-content: center;
    align-items: start;
    justify-items: center;


.slide_grid 
    width: 218px;
    min-width: 100%;
    max-width: 100%;
    height: 368px;
    min-height: 365px;
    max-height: 368px;
    overflow: hidden;
    border-radius: 15px;
    background: white;
    padding: 12px;
    text-align: center;


.slide_grid img 
    max-width: 100%;
    height: 100%;
    text-align: center;
    object-fit: cover;
    border-radius: 8px;

+below(598px)
    .slide_grid 
        // width 100%
        min-width: 100%;
        max-width: 100%;
        height: 114px;
        min-height: unset
        max-height: unset
       