.universal__text 
    align-items:unset    

.subs_bold
    font-weight: 900;
    font-size: 1.3em;


.universal .img_block 
    border-radius: 80px 0 80px;
    width: var(--univImgBlockWidth);
    max-width: @width;
    height: var(--univImgBlockHeight);
    max-height: @height;
    min-height: @height;
    background: linear-gradient(282deg, #f0f0f0, #f0efee);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;


