.min_rec
    background: linear-gradient(80deg, clrgb(sun,.5),clrgb(prim, .5),clrgb(sun,.5))
    border-radius: 15px;
    position relative
    width: 80%;

.min_rec p.subs 
    padding: 48px 82px 
    font-size: 1em
    font-weight: 800

.min_rec::after 
    content: ""
    width 20px
    height: @width
    position absolute
    left: 15px
    top: @left
    background: clr(sun)
    border-radius: 50%

+below(d) 
    .work__btm
        grid-template-columns: repeat(3,1fr)

+below(t)
    .work__btm
        grid-template-columns: repeat(2,1fr)

    .min_rec
        width unset
    

+below(m)
    .work__btm
        grid-template-columns: repeat(1,1fr)
        gap 18px
        
    .min_rec p.subs 
        padding: 34px;