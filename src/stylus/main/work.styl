.work__btm
    display: grid
    grid-template-columns: repeat(5, 1fr)
    gap 32px
    justify-content: center;
    align-items: flex-start

.work__win
    border-radius: 15px;
    display: flex
    flex-direction: column;
    gap: 18px;
    background: clrgb(prim, 1)
    padding: 25px;

.sub_title
    font-family: fnt(prim_eb)
    font-size: 1.1em;
    text-align: center;
    line-height: 1.3em;

.sub_subs
    font-family: fnt(prim_reg);
    font-weight: 700;
    text-align: center
    color clr(second)
    font-size: .8em

.work__icon
    text-align: center;
    padding: 16px;
    color: clr(prim)
    border-radius: 15px;
    position relative
    overflow: hidden

.work__ungle
    background:clr(prim);
    position: absolute;
    bottom: 0;
    right: -2px;
    border-radius: 50%;
    width: 18px;
    height: @width;
    text-align: center;
    color: clr(blck)
    font-style: normal;
    font-weight: 900;
    font-size: .8em;



.work__icon
    background: clr(sun)

