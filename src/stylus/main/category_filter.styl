:root {
    --primary-color: #c77022;
    --primary-hover: #b8651f;
    --danger-color: #dc3545;
    --danger-hover: #c82333;
    --border-color: #ddd;
    --background-light: #f8f9fa;
    --border-light: #e9ecef;
    --text-muted: #666;
    --text-disabled: #999;
}

.category-filter-wrapper {
    margin-bottom: 40px;
    padding: 20px;
    background: var(--background-light);
    border-radius: 10px;
    border: 1px solid var(--border-light);
}

.category-filter h3 {
    margin-bottom: 15px;
    color: #333;
    font-size: 1.2rem;
}

.filter-controls {
    display: flex;
    gap: 15px;
    align-items: center;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.filter-select {
    padding: 8px 12px;
    border: 1px solid var(--border-color);
    border-radius: 5px;
    background: white;
    font-size: 14px;
    min-width: 200px;
    transition: border-color 0.2s ease;
}

.filter-select:focus {
    outline: none;
    border-color: var(--primary-color);
}

.filter-select:disabled {
    background: #f5f5f5;
    color: var(--text-disabled);
    cursor: not-allowed;
}

.clear-filters-btn {
    padding: 8px 16px;
    background: var(--danger-color);
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
    transition: background 0.3s;
}

.clear-filters-btn:hover {
    background: var(--danger-hover);
}

.categories-container {
    margin-top: 20px;
}

ul.category__list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: flex-start;
    color: black;
    padding: 0;
    margin: 0;
    list-style: none;
}

.category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 15px;
    border: 2px solid var(--primary-color);
    padding: 20px;
    max-width: 300px;
    min-width: 250px;
    background: white;
    transition: all 0.3s ease;
    opacity: 1;
    transform: scale(1);
}

.category-item.hidden {
    opacity: 0;
    transform: scale(0.8);
    pointer-events: none;
    display: none;
}

.category-item:hover {
    box-shadow: 0 4px 15px rgba(199, 112, 34, 0.2);
    transform: translateY(-2px);
}

.category-item-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid var(--primary-color);
    margin-bottom: 15px;
}

.category-item-image img {
    object-fit: cover;
    width: 100%;
    height: 100%;
}

.category-item-content {
    text-align: center;
    margin-bottom: 15px;
    flex-grow: 1;
}

.category-item-title {
    margin-bottom: 10px;
}

.category-item-title a {
    font-size: 1.3rem;
    font-weight: 600;
    color: #333;
    text-decoration: none;
    display: block;
    margin-bottom: 5px;
}

.category-item-title a:hover {
    color: var(--primary-color);
}

.category-count {
    font-size: 0.9rem;
    color: var(--text-muted);
    display: block;
    margin-top: 5px;
}

.parent-category {
    font-size: 0.8rem;
    color: var(--primary-color);
    font-style: italic;
    display: block;
    margin-top: 3px;
}

.category-description {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.4;
    margin-top: 8px;
}

.category_item {
    background: var(--primary-color);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
}

.category_item:hover {
    background: var(--primary-hover);
}

.category-item-link {
    color: white;
    text-decoration: none;
    font-weight: 500;
}

.no-results {
    text-align: center;
    padding: 40px;
    color: var(--text-muted);
    font-size: 1.1rem;
    grid-column: 1 / -1;
}

@media (max-width: 1024px) {
    .filter-controls {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
    }
    
    .clear-filters-btn {
        grid-column: 1 / -1;
        justify-self: start;
    }
}

@media (max-width: 768px) {
    .filter-controls {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: 10px;
    }
    
    .filter-select {
        min-width: auto;
        width: 100%;
    }
    
    .clear-filters-btn {
        width: 100%;
        margin-top: 10px;
    }
    
    ul.category__list {
        justify-content: center;
    }
    
    .category-item {
        min-width: 280px;
    }
}
