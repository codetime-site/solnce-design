body 
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;


.container 
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;


.header_block 
    text-align: center;
    margin-bottom: 40px;


.title 
    color: #fff;
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 10px;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);


.title__under 
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
    margin: 0 auto;
    border-radius: 2px;


.category-filter-wrapper 
    margin-bottom: 30px;
    padding: 25px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);


.category-filter h3 
    margin-bottom: 15px;
    font-size: 1.3rem;
    color: #333;
    font-weight: 500;


.filter-controls 
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    align-items: center;


.filter-select 
    padding: 12px 16px;
    border: 2px solid transparent;
    border-radius: 10px;
    background: #f8f9fa;
    font-size: 14px;
    transition: all 0.3s ease;
    cursor: pointer;


.filter-select:focus 
    outline: none;
    border-color: #667eea;
    background: #fff;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);


.clear-filters-btn 
    padding: 12px 24px;
    background: linear-gradient(135deg, #ff6b6b, #ee5a24);
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);


.clear-filters-btn:hover 
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);


.products-container 
    margin-top: 30px;


.products-grid 
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;


.product-item 
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    opacity: 1;
    transform: translateY(0);


.product-item.hidden 
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
    display: none;


.product-item:hover 
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);


.product-image 
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    position: relative;


.product-image img 
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;


.product-item:hover .product-image img 
    transform: scale(1.05);


.product-content 
    padding: 20px;


.product-title 
    margin: 0 0 10px 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;


.product-title a 
    color: #333;
    text-decoration: none;
    transition: color 0.3s;


.product-title a:hover 
    color: #667eea;


.product-price 
    font-size: 1.1rem;
    font-weight: bold;
    color: #28a745;
    margin-bottom: 10px;
    display: inline-block;
    background: rgba(40, 167, 69, 0.1);
    padding: 5px 10px;
    border-radius: 20px;


.product-excerpt 
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 15px;


.product-meta 
    font-size: 0.8rem;
    color: #999;
    margin-bottom: 15px;


.product-actions 
    text-align: center;


.product-link 
    display: inline-block;
    padding: 12px 24px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);


.product-link:hover 
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);


.no-products, .no-results 
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px 20px;
    color: #666;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    font-size: 1.1rem;


+below(t) 
    .title 
        font-size: 2rem;
    

    .filter-controls 
        grid-template-columns: 1fr;
    

    .products-grid 
        grid-template-columns: 1fr;
    

    .product-content 
        padding: 15px;
    

    .product-image 
        height: 150px;
    


