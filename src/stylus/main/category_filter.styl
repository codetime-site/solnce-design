

.category-filter-wrapper 
    margin-bottom: 30px;
    padding: 25px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);


.category-filter h3 
    margin-bottom: 15px;
    font-size: 1.3rem;
    color: #333;
    font-weight: 500;


.filter-controls 
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    align-items: center;


.filter-select 
    padding: 12px 16px;
    border: 2px solid transparent;
    border-radius: 10px;
    background: #f8f9fa;
    font-size: 14px;
    transition: all 0.3s ease;
    cursor: pointer;


.filter-select:focus 
    outline: none;
    border-color: #667eea;
    background: #fff;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);


.clear-filters-btn 
    padding: 12px 24px;
    background: linear-gradient(135deg, #ff6b6b, #ee5a24);
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);


.clear-filters-btn:hover 
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);


.products-container 
    margin-top: 30px;


.products-grid 
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;


.product-item 
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    opacity: 1;
    transform: translateY(0);
    padding: 27px;

.product-item.hidden 
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
    display: none;

.product-item:hover 
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgb(222 100 52);

.product-image 
    width: 100%;
    height: 200px;
    overflow: hidden;
    // background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    background: clr(prim)
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;

.product-image img 
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;

.product-item:hover .product-image img 
    transform: scale(1.05);


.product-content 
    padding: 20px;

.product-title 
    font-size: 1em;
    font-weight: 600;
    color: clr(blck)
    line-height: 1.2em;

.product-title a 
    color: #333;
    text-decoration: none;
    transition: color 0.3s;

.product-title a:hover 
    color: #667eea;

.product-price 
    font-size: 1.1rem;
    font-weight: bold;
    color: #28a745;
    margin-bottom: 10px;
    display: inline-block;
    background: rgba(40, 167, 69, 0.1);
    padding: 5px 10px;
    border-radius: 20px;

.product-excerpt 
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 15px;

.product-meta 
    font-size: 0.8rem;
    color: #999;
    margin-bottom: 15px;

.product-actions 
    text-align: center;

.product-link 
    display: inline-block;
    color: clr(prim)
    text-decoration: none;
    border-radius: 7px;
    font-size: .9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.5);
    background: #fe4f18;
    border-radius: 31px 0;
    padding: 11px 42px;

.product-link:hover 
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);

.no-products, .no-results 
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px 20px;
    color: #666;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    font-size: 1.1rem;

+below(t) 
    .title 
        font-size: 2rem;
    

    .filter-controls 
        grid-template-columns: 1fr;
    

    .products-grid 
        grid-template-columns: 1fr;
    

    .product-content 
        padding: 15px;
    

    .product-image 
        height: 150px;
    


