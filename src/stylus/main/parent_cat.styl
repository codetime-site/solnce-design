.parent_cat
    padding 40px 0
    background-color #f8f8fa

.parent_cat__contant
    padding 0 10px

.splide__arrows
    display none

.splide__list
    align-items stretch

.splide__slide
    padding 15px

.card
    height 100%
    text-decoration none
    display flex
    flex-direction column
    align-items center
    text-align center
    padding 20px
    background-color #ffffff
    border-radius 12px
    box-shadow 0 5px 18px rgba(0, 0, 0, 0.15)
    transition transform 0.3s ease, box-shadow 0.3s ease

.card:hover
    transform translateY(-8px)
    box-shadow 0 10px 25px rgba(0, 123, 255, 0.25)

.card__image-wrapper
    width 130px
    height 130px
    overflow hidden
    border-radius 50%
    margin-bottom 15px
    border 4px solid #4a90e2
    box-shadow 0 0 10px rgba(74, 144, 226, 0.6)

.card__image
    width 100%
    height 100%
    object-fit cover
    transition transform 0.3s ease

.card:hover .card__image
    transform scale(1.05)

.card__title
    font-size 1.15rem
    font-weight 600
    color #2c3e50
    margin 0
    line-height 1.3