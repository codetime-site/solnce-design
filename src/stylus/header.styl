/* Mobile styles (new) */
+below(t) {
    .header__content {
        flex-direction: column;
        align-items: flex-start;
        padding: 10px 15px;
    }

    .header__logo {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    svg#logo {
        width: 150px; /* Smaller logo for mobile */
    }

    .header__logo p {
        font-size: .8em;
        margin-top: 5px;
    }

    .header__menu {
        width: 100%;
        position: relative;
    }

    .header__menu .menu__list {
        display: none; /* Hide menu by default */
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background: #0a0a0a; /* Match header background */
        padding: 10px 0;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
    }

    .header__menu .menu__list.active {
        display: flex; /* Show menu when active */
    }

    .header__menu .menu__item {
        padding: 10px 15px;
        text-align: center;
    }

    .header__menu .menu__item:hover {
        background: var(--sun, #fe4f18);
    }

    .header__callme {
        width: 100%;
        justify-content: center;
        margin-top: 10px;
    }

    .callme__right {
        width: auto;
        text-align: center;
    }

    .callme__right > a {
        font-size: 0.9em;
    }

    /* Hamburger menu button */
    .header__mobile {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        width: 100%;
        padding: 10px 15px;
    }

    .hamburger {
        display: block;
        width: 30px;
        height: 20px;
        position: relative;
        cursor: pointer;
    }

    .hamburger span {
        display: block;
        height: 3px;
        background: #fff;
        margin-bottom: 5px;
        transition: all 0.3s;
    }

    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -7px);
    }
}



