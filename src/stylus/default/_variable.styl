colors = {
    prim: #ffffff,
    second: #2C2C2C,
    blck: #1A1A1A,
    gr: #B7B7B7
    sun:#FE4F18,
}

// зазмеры для адаптация 
// шрифт определяет специальный код внизу 
fonts = {
    header: 'discovery'
    prim: 'manrope'
    prim_reg: 'manrope_reg'
    prim_med: 'manrope_med'
    prim_sb: 'manrope_sb'
    prim_b: 'manrope_b'
    prim_eb: 'manrope_eb'
    prim_l: 'manrope_l'
    prim_el: 'manrope_el'
    icon: "fontello" sans-serif
}

