// определяем переменный  
:root
    // определяем цвета  
    for name, color in colors 
        --main_{name}:color
        // определение 16 ричных цветов 
        --main_hex_{name}: unquote(join(", ", red(color) green(color) blue(color)))
    
    // определяем шрифт
    for name, font in fonts 
        --font_{name}:font

    --speed:05s
    --degree_sec:135deg

    // imgSize
    --univImgBlockHeight:482px  
    --univImgBlockWidth:516px  




// определяем размеры  
extraLarge = 1400px
el = extraLarge

large = 1200px
l = large

desktop = 1024px
d = desktop

tablet = 768px
t = tablet

mobile = 568px
m = mobile

smallMobile = 480px
sm = smallMobile

extraSmallMobile = 380px
esm = extraSmallMobile


+below(d)
    :root
        --univImgBlockWidth:440px
        --univImgBlockHeight:336px  
        
+below(900px)
    :root
        --univImgBlockWidth: 324px;
        --univImgBlockHeight: 248px;

+below(t)
    :root
        --univImgBlockWidth: 100%;
        --univImgBlockHeight:20em


